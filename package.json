{
  "name": "numerology-web",
  "version": "0.1.1",
  "private": true,
  "type": "module",
  "description": "KÜN Numeroloji - numeroloji hesaplama ve PDF rapor uygulaması",
  "author": "KUN",
  "license": "MIT",
  "main": "electron.main.cjs",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "start:electron": "cross-env ELECTRON_START_URL=http://localhost:5173 electron .",
    "dev:electron": "concurrently -k \"npm:dev\" \"npm:start:electron\"",
    "build:electron": "npm run build && electron-builder"
  },
  "dependencies": {
    "html2canvas": "^1.4.1",
    "jspdf": "^3.0.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@vitejs/plugin-react": "^4.2.0",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "electron": "^31.0.0",
    "electron-builder": "^24.13.3",
    "typescript": "^5.0.0",
    "vite": "^5.0.0"
  },
  "build": {
    "appId": "com.kun.numerology",
    "productName": "KUN Numeroloji",
    "asar": true,
    "files": [
      "dist/**/*",
      "electron.main.cjs"
    ],
    "directories": {
      "buildResources": "build"
    },
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "build/icon.ico"
    },
    "nsis": {
      "oneClick": true,
      "perMachine": false,
      "allowElevation": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "artifactName": "KUN-Numeroloji-Setup-${version}.exe"
    }
  }
}
